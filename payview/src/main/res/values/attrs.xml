<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Payview">
        <attr name="cardBgColor" format="integer"/>
        <attr name="cardFgColor" format="integer"/>
        <attr name="cardTextColor" format="integer"/>
        <attr name="cardNameTextSize" format="integer"/>
        <attr name="cardNoTextSize" format="integer"/>
        <attr name="cardYearTextSize" format="integer"/>
        <attr name="cardMonthTextSize" format="integer"/>
        <attr name="cardCvTextSize" format="integer"/>
        <attr name="cardNumberHelperText" format="string"/>
        <attr name="cardNameHelperText" format="string"/>
        <attr name="cardYearErrorText" format="string"/>
        <attr name="cardMonthErrorText" format="string"/>
        <attr name="cardCvErrorText" format="string"/>
        <attr name="cardExpiredErrorText" format="string"/>
        <attr name="cardAnimationType" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="cardBtnPayText" format="string" />
        <attr name="cardNameHintText" format="string" />
        <attr name="cardNoHintText" format="string" />
        <attr name="cardMonthHintText" format="string" />
        <attr name="cardYearHintText" format="string" />
        <attr name="cardCvHintText" format="string" />

    </declare-styleable>

</resources>